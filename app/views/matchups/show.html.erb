<div class="matchup-container">
  <div class="matchup-header">
    <h1>üéÆ Build Analysis for <%= @matchup.user_champion %></h1>
    <div class="matchup-info">
      <div class="user-champion">
        <strong>Champion:</strong> <%= @matchup.user_champion %> (<%= @matchup.user_role %>)
      </div>
      
      <% if @matchup.ally_team.present? %>
        <div class="team-info">
          <div class="ally-team">
            <strong>üü¢ Allies:</strong>
            <% Array(@matchup.ally_team).each do |ally| %>
              <span class="champion-tag ally">
                <%= ally["champion"] %> (<%= ally["role"] %>)
              </span>
            <% end %>
          </div>
          
          <div class="enemy-team">
            <strong>üî¥ Enemies:</strong>
            <% Array(@matchup.enemy_team).each do |enemy| %>
              <span class="champion-tag enemy">
                <%= enemy["champion"] %> (<%= enemy["role"] %>)
              </span>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Visual Rune Display -->
  <section class="build-section">
    <%= render 'shared/rune_display', runes_text: @matchup.runes %>
  </section>

  <!-- Items Section -->
  <section class="build-section">
    <div class="section-panel">
      <h2 class="section-title">‚öîÔ∏è Core Items</h2>
      <div class="items-grid">
        <% Array(@matchup.core_items).each_with_index do |item, index| %>
          <div class="item-card core-item">
            <div class="item-icon">üó°Ô∏è</div>
            <div class="item-details">
              <div class="item-name"><%= item["item"] %></div>
              <div class="item-description"><%= item["description"] %></div>
            </div>
            <div class="item-order"><%= index + 1 %></div>
          </div>
        <% end %>
      </div>
    </div>

    <div class="section-panel">
      <h2 class="section-title">üîß Situational Items</h2>
      <div class="items-grid situational">
        <% Array(@matchup.situational_items).each do |item| %>
          <div class="item-card situational-item">
            <div class="item-icon">‚ö°</div>
            <div class="item-details">
              <div class="item-name"><%= item["item"] %></div>
              <div class="item-description"><%= item["description"] %></div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </section>

  <!-- Playstyle Section -->
  <section class="build-section">
    <div class="section-panel">
      <h2 class="section-title">üìà Game Strategy</h2>
      
      <div class="strategy-timeline">
        <div class="strategy-phase">
          <div class="phase-header">
            <div class="phase-icon">üå±</div>
            <h3>Early Game</h3>
            <span class="phase-time">0-15 min</span>
          </div>
          <div class="phase-content">
            <%= @matchup.playstyle_early %>
          </div>
        </div>

        <div class="strategy-phase">
          <div class="phase-header">
            <div class="phase-icon">‚öîÔ∏è</div>
            <h3>Mid Game</h3>
            <span class="phase-time">15-30 min</span>
          </div>
          <div class="phase-content">
            <%= @matchup.playstyle_midgame %>
          </div>
        </div>

        <div class="strategy-phase">
          <div class="phase-header">
            <div class="phase-icon">üëë</div>
            <h3>Late Game</h3>
            <span class="phase-time">30+ min</span>
          </div>
          <div class="phase-content">
            <%= @matchup.playstyle_lategame %>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Summary -->
  <section class="build-section">
    <div class="section-panel summary-panel">
      <h2 class="section-title">üìã Strategy Summary</h2>
      <div class="summary-content">
        <%= @matchup.summary %>
      </div>
      
      <% if @matchup.riot_match_id.present? %>
        <div class="match-info">
          <small>üìä Generated from live match: <%= @matchup.riot_match_id %></small>
        </div>
      <% end %>
    </div>
  </section>

  <!-- Actions -->
  <div class="action-buttons">
    <%= link_to "üìù New Analysis", new_matchup_path, class: "btn btn-primary" %>
    <%= link_to "üìã All Builds", matchups_path, class: "btn btn-secondary" %>
  </div>
</div>

